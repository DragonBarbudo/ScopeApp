include _config.jade
include _mixins.jade


ons-list(ng-controller="ListaSitiosController").selectFromList
  ons-list-header.filtroHeader
    ons-row
      ons-col
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          input(type="text", id="queryFilter", ng-model="query").mdl-textfield__input
          label(for="queryFilter").mdl-textfield__label Buscar
      ons-col
      
  ons-list-item(ng-animate="'zoom'", ng-show="failed") Ocurri√≥ un error al cargar los sitios.
  ons-list-item(ng-repeat="item in sitios | orderBy:'Clave' | filter: query", modifier="tappable").onslistSitios
    div(ng-click="asignSelection(item.Clave);")
      ons-row.miniInfo
        ons-col: strong: span {{item.Clave}}
        ons-col ID: <span>{{item.ID}}</span>
        ons-col Tipo: <span>{{item.Tipo}}</span>
      ons-row
        ons-col {{item.Sitio}}
