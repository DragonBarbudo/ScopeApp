include _config.jade
include _mixins.jade

ons-page.proveedor
  +ons-toolbar('Proveedor')
  form(action="#", ng-controller="ProveedorCtrl")
    ons-bottom-toolbar(modifier="transparent").text-right.pageAction
      button(type="button", ng-click="save()").mdl-button.mdl-js-button
        ons-icon(icon="ion-ios-paperplane")
        |  Guardar
      
    ons-row
      .titulo
         ons-icon(icon="ion-ios-arrow-right")
         |  Información
    .m10
      ons-row
        ons-col: +input('remision', 'No.  de requerimiento SCOPE')
        ons-col: +input('fecha', 'Fecha', 'date')
        ons-col
      ons-row
        ons-col: +input('nombreProveedor', 'Nombre del proveedor')
        ons-col: +input('claveProveedor', 'Clave del proveedor')
        ons-col: +input('contacto', 'Contacto')
        ons-col: +input('telefono', 'Teléfono')
      ons-row
        ons-col: +input('comentariosProveedor', 'Comentarios')
    ons-row
      .titulo
        ons-icon(icon="ion-ios-arrow-right")
        |  Equipo
    .m10
      ons-row
        ons-col: +input('nombreEquipo', 'Nombre del equipo')
        ons-col: +input('claveEquipo', 'Clave del equipo')
        ons-col: +input('familiaEquipo', 'Familia del equipo')
        ons-col: +input('proveedor', 'Proveedor')
      ons-row
        ons-col: +input('comentariosEquipo', 'Comentarios')
    ons-row
      .titulo
        ons-icon(icon="ion-ios-arrow-right")
        |  Foto / diagrama
    ons-row: p.label Capturar o elegir imagen
    .m10
      ons-row
        ons-col.text-center
          button(type="button", ng-click="camera()").mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored
            ons-icon(icon="ion-camera")
      ons-row
        ons-col.text-center
          img(ng-src="", alt="")#picture
          
